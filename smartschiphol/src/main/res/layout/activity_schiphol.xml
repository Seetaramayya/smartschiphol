<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartschiphol.SchipholActivity">

    <EditText
            android:id="@+id/flightNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pnr_number"
            android:layout_below="@+id/welcomeText"
            android:layout_marginTop="24dp"/>

    <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_below="@+id/flightNumber" android:layout_alignEnd="@+id/flightNumber"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please enter your flight number and click Submit to be notified about this flight."
            android:id="@+id/welcomeText" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/flightInfo"
            android:layout_marginTop="35dp" android:layout_below="@+id/submitButton"
            android:layout_alignParentStart="true"/>

</RelativeLayout>
